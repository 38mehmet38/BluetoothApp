    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Remote Video (Large) -->
    <TextureView
        android:id="@+id/tvRemoteVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local Video (Small - Picture-in-Picture) -->
